        <ComboBox x:Name="cboCharacters" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Margin="18,138,0,0" Height="33" RenderTransformOrigin="0.607,1.235" SelectionChanged="cboCharacters_SelectionChanged"/>
